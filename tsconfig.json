{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "lib": ["esnext"],
        "outDir": "./dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"],
            "app/*": ["src/app/*"],
            "assets/*": ["src/assets/*"],
            "utils/*": ["src/utils/*?"],
            "config/*": ["config/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
