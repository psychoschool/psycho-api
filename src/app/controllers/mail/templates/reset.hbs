<html lang='ru'>
<head>
    <meta charset="utf-8" />
    <title>PsychoSchool</title>
</head>

<body>
<table width="660" border="0" cellpadding="0" cellspacing="0" align="center">
    <tbody>
    <tr>
        <td>
            <table width="660" border="0" cellpadding="0" cellspacing="0" align="center">
                <tbody>
                <tr>
                    <td width="100%" align="center" style="display:block; text-align:center; vertical-align:top; font-size:16px; min-width:100%;">
                        <!-- logo -->
                        <table align="center" width="100%" border="0" cellpadding="38px 0px 38px 0px" cellspacing="0">
                            <tbody>
                            <tr>
                                <td align="center">
                                    <a href="https://psychoschool.ru" style="text-decoration: none; color: black;">
                                        <img
                                            src="https://spaces.psychoschool.ru/images/logo.jpg"
                                            width="44"
                                            height="auto"
                                            alt="psychoschool"
                                            border="0"
                                        />

                                        <span style="font-size: 44px">
                                            PsychoSchool
                                        </span>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <!-- main -->
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tbody>
                            <tr>
                                <td width="4%"></td>
                                <!-- Content -->
                                <td width="92%">
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tbody>
                                        <!-- Headline -->
                                        <tr>
                                            <td>
                                                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                    <!-- Spacer -->
                                                    <tbody>
                                                    <tr>
                                                        <td>
                                                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                                                <tbody>
                                                                <tr>
                                                                    <td height="10"></td>
                                                                </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                    <!-- Headline -->
                                                    <tr>
                                                        <td align="left" style="font-size:50px;line-height:60px; font-weight: bold; color:#000000;font-family:serif;">
                                                            <span><strong>Восстановление пароля</strong></span>
                                                        </td>
                                                    </tr>

                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>

                                        <!-- Divider Line -->
                                        <tr>
                                            <td>
                                                <table width="100%" border="0" cellspacing="0" cellpadding="0" style="border-bottom: 2px solid #000000;">
                                                    <!-- Spacer -->
                                                    <tbody>
                                                    <tr>
                                                        <td>
                                                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                                                <tbody>
                                                                <tr>
                                                                    <td height="30"></td>
                                                                </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>

                                        <!-- Course Section -->
                                        <tr>
                                            <td>
                                                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                    <!-- Spacer -->
                                                    <tbody>
                                                    <tr>
                                                        <td>
                                                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                                                <tbody>
                                                                <tr>
                                                                    <td height="30"></td>
                                                                </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                    <!-- Card -->
                                                    <tr>
                                                        <td width="100%" valign="top" style="vertical-align:top;">
                                                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                                <!-- Course Title -->
                                                                <tbody>
                                                                <tr>
                                                                    <td style="text-align:center; padding:0 0 36px 0;font-size: 24px; color: #000000;line-height:28px !important; word-wrap: break-word;" valign="top">
                                                                        <span>Чтобы востановить пароль пойдите по ссылке ниже</span>
                                                                    </td>
                                                                </tr>
                                                                <!-- CTA Button -->
                                                                <tr>
                                                                    <td align="center">
                                                                        <a
                                                                            href="{{link}}"
                                                                            target="_blank"
                                                                            style="padding: 13px 27px 13px 27px; font-size: 16px; color: #ffffff; text-decoration: none; border-radius: 2px; -webkit-border-radius: 2px; -moz-border-radius: 2px; background-color: #000000; display: inline-block;text-align:center;"
                                                                        >
                                                                            Востанвоить пароль
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>

                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>

                                        <!-- Divider Line -->
                                        <tr>
                                            <td>
                                                <table class="sectiondivider" width="100%" border="0" cellspacing="0" cellpadding="0" style="border-bottom: 2px solid #000000;">
                                                    <!-- Spacer -->
                                                    <tbody>
                                                    <tr>
                                                        <td>
                                                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                                                <tbody>
                                                                    <tr>
                                                                        <td height="30"></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                                <!-- /Content -->
                                <td width="4%"></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>
</body>
</html>
